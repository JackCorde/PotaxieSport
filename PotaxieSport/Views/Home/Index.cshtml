@{
    ViewData["Title"] = "Home Page";
}
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <title>PotaxieSport</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="apple-touch-icon" href="~/img_plantilla/apple-icon.png">
