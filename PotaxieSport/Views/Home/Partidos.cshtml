                        </ul>
                    </li>
                </ul>
            </div>

            <div class="col-lg-9">
                <div class="row text-center py-3">
                    <div class="col-lg-6 m-auto">
                        <h1 class="h1">Partidos</h1>
                        <p>
                            Nuestros Partidos Actuales.
                        </p>
                    </div>
                </div>
                <div class="row">
                    @if (ViewBag.Partidos.Count == 0)
                    {
                        <div class="col-md-12">
                            <div class="row py-lg-2">
                                <div class="col-lg-6 col-md-8 mx-auto text-center">
                                    <h1 class="fw-light titulos">
                                        <i class="fa-regular fa-face-frown"></i>
                                    </h1>
                                    <p class="p-0">
                                        No hay partidos actualmente
                                    </p>
                                </div>
                            </div>
                        </div>
                    }

                    @foreach (var item in ViewBag.Partidos)
                    {
                        <div class="col-md-4">
                            <div class="card mb-4 product-wap rounded-0">
                                <div class="card rounded-0">
                                    <img class="card-img rounded-0 img-fluid" src="~/img_plantilla/category_img_03.jpg">
                                    <div class="card-img-overlay rounded-0 product-overlay d-flex align-items-center justify-content-center">
                                        <ul class="list-unstyled">
                                            <li><a class="btn btn-success text-white" href="shop-single.html"><i class="far fa-heart"></i></a></li>
                                            <li><a class="btn btn-success text-white mt-2" href="shop-single.html"><i class="far fa-eye"></i></a></li>
                                        </ul>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <a href="shop-single.html" class="h3 text-decoration-none">@item.Torneo</a>
                                        
                                    <p>
                                        Retador: @item.EquipoRetador <br>
                                        Defensor: @item.EquipoDefensor
                                        <br><br>
                                        Ganador: @item.EquipoGanador <br />
                                        <br>
                                        Arbitro: @item.Arbitro <br />
                                        Fecha: @item.Fecha <br>
                                        Hora: @item.Hora
                                    </p>
                                   
                                    <p class="text-center mb-0">@item.Costo</p>
                                </div>
                            </div>
                        </div>

                    }

                    
                </div>    
            </div>

        </div>
    </div>
