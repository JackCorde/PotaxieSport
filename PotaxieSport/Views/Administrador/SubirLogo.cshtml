@{
    ViewBag.Title = "AgregarLogo";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">
        @ViewBag.Error
    </div>
}


<div class="container">
    <form asp-action="SubirLogo" asp-controller="Administrador" method="post" enctype="multipart/form-data">
        <input type="file" required name="file" />
        <input type="hidden" name="id" value="@ViewBag.equipoId" />
        <input type="hidden" name="tipo" value="Equipo" />
        <input type="" name="CategoriaId" value="@ViewBag.categorias" />
        <input type="submit" value="Subir Imagen" />
    </form>
    <br>
    <br>
</div>
