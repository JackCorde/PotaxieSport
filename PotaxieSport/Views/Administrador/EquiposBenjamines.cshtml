@model List<PotaxieSport.Models.Equipo>

@{
    ViewData["Title"] = "Equipos Benjamines";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">

        <div class="row mt-3">
            <div class="col-lg-6">
                <input type="text" id="searchInput" placeholder="Buscar por nombre...">
                <button id="searchButton" class="btn btn-primary">Buscar</button>
            </div>
            <div class="col-lg-6 text-lg-end mt-3 mt-lg-0">
                <button id="addButton" class="btn btn-success">Agregar Equipo</button>
            </div>
        </div>

        <table id="equipos-table" class="table table-hover">
            <thead>
                <tr>
                    <th>Equipo ID</th>
                    <th>Nombre del Equipo</th>
                    <th>Género</th>
                    <th>Logo</th>
                    <th>Coach</th>
                    <th>Torneo Actual</th>
                    <th>Editar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var equipo in Model)
                {
                    <tr>
                        <td>@equipo.EquipoId</td>
                        <td>@equipo.EquipoNombre</td>
                        <td>@equipo.Genero</td>
                        <td><img src="@equipo.Logo" alt="Logo" style="height:50px;"></td>
                        <td>@equipo.Coach</td>
                        <td>@equipo.TorneoActual</td>
                        <td class="action-icons"><i class="fas fa-edit"></i></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script src="~/js/adminLayout.js"></script>
