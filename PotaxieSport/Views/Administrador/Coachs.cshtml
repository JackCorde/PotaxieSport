@model List<PotaxieSport.Models.Usuario>

<head runat="server">
    <link rel="stylesheet" href="~/css/tablas.css" />
</head>

@{
    ViewData["Title"] = "Arbitros";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}

<div class="container">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["SuccessMessage"]
        </div>
    }


    <div class="row">
        <div class="col-lg-12">
            <div class="row mt-3">
                <div class="col-lg-6">
                    <input type="text" id="searchInput" placeholder="Buscar por nombre..." class="form-control">
                </div>
                <div class="col-lg-6 text-lg-end mt-3 mt-lg-0">
                    <button onclick="location.href='@Url.Action("AgregarUsuario", "Administrador", new { url = "Doctores" })'" type="button" class="btn btn-primary ms-3">
                        Agregar Usuario
                    </button>
                </div>
            </div>

            <table id="usuarios-table" class="table table-hover mt-3">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Apellido Paterno</th>
                        <th>Apellido Materno</th>
                        <th>Nombre de Usuario</th>
                        <th>Email</th>
                        <th>Editar</th>
                    </tr>
                </thead>
                <tbody id="usuarios-tbody">
                    @* Los datos se cargarán aquí mediante JavaScript *@
                </tbody>
            </table>

            <div id="pagination" class="mt-3">
                @* Los controles de paginación se generarán aquí *@
            </div>
        </div>
    </div>

@section Scripts {
    <script id="usuarios-data" type="application/json">
        @Html.Raw(Json.Serialize(Model))
    </script>
}
