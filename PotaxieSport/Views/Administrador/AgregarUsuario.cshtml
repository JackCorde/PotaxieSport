@model PotaxieSport.Models.Usuario

<head runat="server">
    <link rel="stylesheet" href="~/css/AgregarUsuario.css" />
</head>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Agregar Usuario";
    var messageType = ViewBag.MessageType as string;
    var message = ViewBag.Message as string;
    var url = ViewBag.url as string; // Obtiene el parámetro 'url'
    
}

<div class="page-container">
    <div class="form-container">
        <h2>Crear Usuario</h2>
        <form asp-action="CrearUsuario" method="post" id="createUserForm">
            <input type="hidden" name="Url" value="@ViewBag.Url" />
            <div class="form-group">
                <label asp-for="Nombre">Nombre</label>
                <input asp-for="Nombre" class="form-control" required />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApPaterno">Apellido Paterno</label>
                <input asp-for="ApPaterno" class="form-control" required />
                <span asp-validation-for="ApPaterno" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApMaterno">Apellido Materno</label>
                <input asp-for="ApMaterno" class="form-control" required />
                <span asp-validation-for="ApMaterno" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Username">Nombre de Usuario</label>
                <input asp-for="Username" class="form-control" required />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email">Correo Electronico</label>
                <input asp-for="Email" class="form-control" type="email" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RolId">Rol</label>
                <select asp-for="RolId" class="form-control" asp-items="ViewBag.Rol" required>
                    <option value="">Seleccione un rol</option>
                </select>
                <span asp-validation-for="RolId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password">Contraseña</label>
                <input asp-for="Password" type="password" class="form-control" required />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group buttons">
                <button type="submit" class="btn btn-custom">Crear Usuario</button>
                <a href="@Url.Action(ViewBag.Url as string, "Administrador")" class="btn btn-custom">Cancelar</a>
            </div>
        </form>
    </div>
</div>