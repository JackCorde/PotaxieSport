@model List<PotaxieSport.Models.Usuario>

@{
    ViewData["Title"] = "Árbitros";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="row mt-3">
            <div class="col-lg-6">
                <input type="text" id="searchInputArbitros" placeholder="Buscar por nombre..." class="form-control">
            </div>
            <div class="col-lg-6 text-lg-end mt-3 mt-lg-0">
                <button onclick="location.href='@Url.Action("AgregarUsuario", "Administrador", new { url = "Arbitros" })'" type="button" class="btn btn-primary ms-3">
                    Agregar Usuario
                </button>
            </div>
        </div>

        <table id="arbitros-table" class="table table-hover mt-3">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Apellido Paterno</th>
                    <th>Apellido Materno</th>
                    <th>Nombre de Usuario</th>
                    <th>Email</th>
                    <th>Disponibilidad</th>
                    <th>Editar</th>
                </tr>
            </thead>
            <tbody id="arbitros-tbody">
                @* Los datos se cargarán aquí mediante JavaScript *@
            </tbody>
        </table>

        <div id="paginationArbitros" class="mt-3">
            @* Los controles de paginación se generarán aquí *@
        </div>
    </div>
</div>

@section Scripts {
    <script id="arbitros-data" type="application/json">
        @Html.Raw(Json.Serialize(Model))
    </script>
    <script src="~/js/arbitros.js"></script>
}

<style>
    #paginationArbitros button {
        margin: 0 5px;
    }

        #paginationArbitros button.btn-primary {
            background-color: #007bff;
            color: #fff;
            border: none;
        }

    .btn-sm {
        padding: 0.25rem 0.5rem;
        font-size: 0.875rem;
        line-height: 1.5;
        border-radius: 0.2rem;
    }

</style>
