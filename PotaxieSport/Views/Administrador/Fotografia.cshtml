@model PotaxieSport.Models.Jugador

@{
    ViewData["Title"] = "Agregar Fotografía";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="text-center">@ViewData["Title"]</h2>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <form asp-action="Fotografia" asp-controller="Administrador" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="file" class="form-label">Seleccionar Archivo:</label>
                    <input type="file" id="file" name="file" class="form-control-file" required />
                </div>
                <input type="hidden" name="id" value="@ViewBag.Id" />
                <input type="hidden" name="tipo" value="Jugador" />
                <input type="hidden" name="EquipoId" value="@ViewBag.IdEquipo" />
                <div class="form-group text-center mt-3">
                    <button type="submit" class="btn btn-primary">Subir Imagen</button>
                </div>
            </form>
        </div>
    </div>
</div>
