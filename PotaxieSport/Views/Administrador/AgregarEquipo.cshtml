@model PotaxieSport.Models.Equipo

@{
    ViewData["Title"] = "Agregar Equipo";
}

<h2>Agregar Equipo</h2>

<form asp-action="AgregarEquipo" method="post">
    <div class="form-group">
        <label asp-for="EquipoNombre" class="control-label"></label>
        <input asp-for="EquipoNombre" class="form-control" />
        <span asp-validation-for="EquipoNombre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Genero" class="control-label"></label>
        <select asp-for="Genero" class="form-control">
            <option value="">Seleccione un género</option>
            <option value="Masculino">Masculino</option>
            <option value="Femenino">Femenino</option>
        </select>
        <span asp-validation-for="Genero" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Logo" class="control-label">Logo</label>
        <input type="file" asp-for="Logo" class="form-control" />
        <span asp-validation-for="Logo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CategoriaId" class="control-label"></label>
        <input asp-for="CategoriaId" class="form-control" />
        <span asp-validation-for="CategoriaId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="UsuarioCoachId" class="control-label"></label>
        <select asp-for="UsuarioCoachId" class="form-control" asp-items="ViewBag.Coaches">
            <option value="">Seleccione un coach</option>
        </select>
        <span asp-validation-for="UsuarioCoachId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Agregar" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
