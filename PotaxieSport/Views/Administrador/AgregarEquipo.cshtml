@model PotaxieSport.Models.Equipo

@{
    ViewBag.Title = "Agregar Equipo";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Agregar Equipo</h2>



<form asp-action="AgregarEquipo" method="post">
    <div class="form-group">
        <label asp-for="EquipoNombre" class="control-label"></label>
        <input asp-for="EquipoNombre" class="form-control" />
        <span asp-validation-for="EquipoNombre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Genero" class="control-label"></label>
        <select asp-for="Genero" class="form-control">
            <option value="Varonil">Varonil</option>
            <option value="Femenil">Femenil</option>
        </select>
        <span asp-validation-for="Genero" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CategoriaId" class="control-label"></label>
        <select asp-for="CategoriaId" class="form-control" asp-items="ViewBag.Categorias"></select>
        <span asp-validation-for="CategoriaId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="UsuarioCoachId">Entrenador</label>
        <select asp-for="UsuarioCoachId" asp-items="@(ViewBag.Coaches as SelectList)" id="coach-select" class="form-control">
            <option value="">Seleccione un entrenador</option>
        </select>
        <span asp-validation-for="UsuarioCoachId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Agregar" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#coach-select').select2({
                placeholder: "Seleccione un entrenador",
                allowClear: true
            });
        });
    </script>
}