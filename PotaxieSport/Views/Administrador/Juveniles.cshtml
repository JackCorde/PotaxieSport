@model List<PotaxieSport.Models.Equipo>

@{
    ViewData["Title"] = "Equipos Benjamines";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["SuccessMessage"]
        </div>
    }

    <div class="row">
        <div class="col-lg-12">
            <div class="row mt-3">
                <h2> Juveniles</h2>

                <div class="col-lg-4">
                    <input type="text" id="searchInput" placeholder="Buscar por nombre..." class="form-control">
                </div>
                <div class="col-lg-3">
                    <select id="genderFilter" class="form-control">
                        <option value="">Todos</option>
                        <option value="Varonil">Varonil</option>
                        <option value="Femenil">Femenil</option>
                    </select>
                </div>
                <div class="col-lg-5 text-lg-end mt-3 mt-lg-0">
                    <button id="addButton" onclick="location.href='@Url.Action("AgregarEquipo", "Administrador")'" class="btn btn-success">Agregar Equipo</button>
                </div>
            </div>

            <div class="table-responsive mt-3" style="max-height: 60vh; overflow: hidden;">
                <table id="equipos-table" class="table table-hover">
                    <thead>
                        <tr>

                            <th>Nombre del Equipo</th>
                            <th>Género</th>
                            <th>Logo</th>
                            <th>Coach</th>
                            <th>Torneo Actual</th>
                            <th>Ver</th>
                        </tr>
                    </thead>
                    <tbody id="equipos-tbody">
                        <!-- Las filas de la tabla serán generadas dinámicamente -->
                    </tbody>
                </table>
            </div>

            <!-- Controles de paginación -->
            <div id="pagination" class="d-flex justify-content-start mt-3">
                <!-- Los botones de paginación serán generados dinámicamente -->
            </div>
        </div>
    </div>
</div>

<script id="equipos-data" type="application/json">
    @Html.Raw(Json.Serialize(Model))
</script>


<style>
    #pagination button {
        margin: 0 5px;
    }

        #pagination button.btn-primary {
            background-color: #007bff;
            color: #fff;
            border: none;
        }

    .table-responsive {
        overflow: hidden;
    }
</style>
